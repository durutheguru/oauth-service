

input CreateResourceServer {

    serverId: String!
    allowedScopes: [String]!

}


type ResourceServer {

    id: ID
    resourceServerId: String!
    allowedScopes: [String]!
    status: ServerStatus

}


enum ServerStatus {
    ACTIVE
    SUSPENDED
}


type PagedResourceServerList {
    page: Int
    totalElements: Int
    totalPages: Int
    resourceServers: [ResourceServer]
}

